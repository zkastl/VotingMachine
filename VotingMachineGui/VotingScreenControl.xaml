<UserControl
    x:Class="VotingMachineGui.VotingScreenControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VotingMachineGui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Voting for State Deputy."/>
        <TextBlock Grid.Row="1" Text="Please vote for 1."/>
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ListBox SelectionMode="Multiple">
                <ListBoxItem Content="Hello" />
                <ListBoxItem Content="Hello" />
                <ListBoxItem Content="Hello" />
                <ListBoxItem Content="Hello" />
                <ListBoxItem Content="Hello" />
            </ListBox>
        </ScrollViewer>
        <Button Grid.Row="3" Margin="0,0,20, 20" Content="VOTE!" />
    </Grid>
</UserControl>
